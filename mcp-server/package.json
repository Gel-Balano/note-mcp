{
  "name": "openai-mcp-server",
  "version": "1.0.0",
  "description": "MCP Server with OpenAI integration",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "NODE_OPTIONS='--import tsx' node --no-warnings=ExperimentalWarning src/index.ts",
    "build": "tsc",
    "dev:nodemon": "nodemon --exec tsx src/index.ts",
    "inspect": "DANGEROUSLY_OMIT_AUTH=true npx @modelcontextprotocol/inspector yarn dev"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/inspector": "^0.16.5",
    "@modelcontextprotocol/sdk": "^1.17.4",
    "dotenv": "^16.0.3",
    "openai": "^5.15.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.0",
    "nodemon": "^3.1.10",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
